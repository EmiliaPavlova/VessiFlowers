@{
    var action = this.ViewContext.RouteData.Values["action"].ToString();
}

@if (Model.EndPage > 1)
{
    <div class="col-xs-12">
        <ul class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <li>
                    <a href="@Url.Action(action)">Първа</a>
                </li>
                <li>
                    <a href="@Url.Action(action, new { page = Model.CurrentPage - 1 })">Предишна</a>
                </li>
            }

            @for (var page = Model.StartPage; page <= Model.EndPage; page++)
            {
                <li class="@(page == Model.CurrentPage ? "active" : "")">
                    <a href="@Url.Action(action, new { page = @page })">@page</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li>
                    <a href="@Url.Action(action, new { page = Model.CurrentPage + 1 })">Следваща</a>
                </li>
                <li>
                    <a href="@Url.Action(action, new { page = Model.TotalPages })">Последна</a>
                </li>
            }
        </ul>
    </div>
}
