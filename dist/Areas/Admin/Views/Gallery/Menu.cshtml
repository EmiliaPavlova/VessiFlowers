@model IEnumerable<GalleryTypeViewModel>
@{
    Layout = null;
}

@foreach (var galleryType in Model)
{
    <li>
        <a href="#"><i class="fa fa-lg fa-fw fa-file-image-o"></i> <span class="menu-item-parent">@galleryType.Name</span></a>
        <ul>

            <li>
                @Html.ActionLink("Добави", "Create", "Gallery", new { id = galleryType.Id }, new { })
            </li>

            @foreach (var gallery in galleryType.Galleries)
            {
                <li>
                    @Html.ActionLink(gallery.Title, "Details", "Gallery", new { id = gallery.Id }, new { })
                </li>
            }

        </ul>
    </li>
}
