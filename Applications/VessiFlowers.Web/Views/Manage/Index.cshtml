@model UserViewModel
@{
    ViewBag.Title = "Абонамент за бюлетин";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
        <div class="form-group">
            <div class="col-md-offset-4 col-md-7">
                <div class="checkbox" style="display: inline-block; margin: 0 2.5rem;">
                    @Html.CheckBoxFor(m => m.IsSubscribed)
                    @Html.LabelFor(m => m.IsSubscribed)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-7">
                <input type="submit" value="Запис" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}