@model IEnumerable<PostViewModel>
@{
    Layout = null;
}

<li>
    <a href="#"><i class="fa fa-lg fa-fw fa-file-text-o"></i> <span class="menu-item-parent">Блог</span></a>
    <ul>
        <li>
            @Html.ActionLink("Добави пост", "Create", "Blog", new { id = 0 }, new { })
        </li>

        @foreach (var post in Model)
        {
            <li>
                @Html.ActionLink(post.Title, "Details", "Blog", new { id = post.Id }, new { })
            </li>
        }

    </ul>
</li>
